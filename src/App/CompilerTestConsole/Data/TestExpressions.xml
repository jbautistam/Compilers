<?xml version="1.0" encoding="utf-8" ?>
<Script>
	<Print>Start test expressions</Print>

	<Numeric Name="NumericVariable">28</Numeric>
	<Date Name="DateVariable">2018-03-05</Date>
	<String Name="StringVariable">This is the value of string variable</String>
	<Boolean Name="BoolVariable">true</Boolean>

	<Print>NumericVariable: {{NumericVariable}}</Print>
	<Print>DateVariable: {{DateVariable}}</Print>
	<Print>StringVariable: {{StringVariable}}</Print>
	<Print>BoolVariable: {{BoolVariable}}</Print>

	<Numeric Name="SecondNumeric">0</Numeric>
	<Let Variable="SecondNumeric">NumericVariable + 2</Let>

	<Print>NumericVariable + 2: {{SecondNumeric}}</Print>

	<Date Name="SecondDate"></Date>
	<Let Variable="SecondDate">DateVariable + "2w"</Let>

	<Print>DateVariable + 2w: {{SecondDate}}</Print>

	<Date Name="ThirdDate"></Date>
	<Let Variable="ThirdDate">SecondDate + "-2w"</Let>

	<Print>ThirdDate + "-2w": {{ThirdDate}}</Print>

	<Let Variable="ThirdDate">ThirdDate - "2w"</Let>

	<Print>ThirdDate - 2w: {{ThirdDate}}</Print>

	<Let Variable="ThirdDate">ThirdDate - (NumericVariable + "w")</Let>

	<Print>ThirdDate - (NumericVariable + "w"): {{ThirdDate}}</Print>

	<Function Name="FirstFunction" Type="Numeric">
		<Arguments>
			<Numeric Name="FirstArgument"/>
			<String Name="SecondArgument"/>
		</Arguments>

		<Print>FirstArgument: {{FirstArgument}}</Print>
		<Print>SecondArgument: {{SecondArgument}}</Print>
		<Return>FirstArgument + 5</Return>
	</Function>

	<Print>Call to function</Print>
	<Numeric Name="ResultFunction">0</Numeric>

	<Call Name="FirstFunction" Result="ResultFunction">
		<Parameter>NumericVariable</Parameter>
		<Parameter>StringVariable + " calling function"</Parameter>
	</Call>

	<Print>Result call to function: {{ResultFunction}}</Print>

	<Print>End test expressions</Print>
</Script>