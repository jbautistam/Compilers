<?xml version="1.0" encoding="utf-8" ?> 
<Job>
	<!-- Proceso de scripts de tipo for with dates -->
	<Script FileName="TestForDates.xml">
		<Parameter Key="StartDate" Type="dateTime" Value="Now" Increment="-3" Interval="Year" Mode="PreviousMonday" />
		<Parameter Key="EndDate" Type="DateTime" Value="Now" Increment="1" Interval="Day" Mode="NextMonday" />
	</Script>

	<!-- Proceso de scripts de tipo for -->
	<Script FileName="TestFor.xml">
		<Parameter Key="StartIndex" Type="Numeric" Value="1"/>
		<Parameter Key="EndIndex" Type="Numeric" Value="40"/>
		<Parameter Key="StepIndex" Type="Numeric" Value="3"/>
	</Script>
	
	<!-- Proceso de scripts de expresiones -->
	<Script FileName="TestExpressions.xml">
		<Parameter Key="StartIndex" Type="Numeric" Value="1"/>
		<Parameter Key="EndIndex" Type="Numeric" Value="40"/>
		<Parameter Key="StepIndex" Type="Numeric" Value="3"/>
		<Parameter Key="StartDate" Type="DateTime" Value="Now" Increment="-3" Interval="Year" Mode="PreviousMonday" />
		<Parameter Key="EndDate" Type="DateTime" Value="Now" Increment="1" Interval="Day" Mode="NextMonday" />
	</Script>

	<!-- Proceso de scripts de tipo exception (debe estar al final) -->
	<Script FileName="TestException.xml" />
</Job>
